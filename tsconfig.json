{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "checkJs": false,
    "module": "ES2020",
    "strict": true,
    "outDir": "lib",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": ["src/**/*"]
}
