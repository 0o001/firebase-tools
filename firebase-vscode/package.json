{
  "name": "firebase-vscode",
  "displayName": "firebase-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:firebase-vscode.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "firebase-vscode",
          "title": "F i r e b a s e",
          "icon": "$(mono-firebase)"
        }
      ]
    },
    "icons": {
      "mono-firebase": {
        "description": "Firebase icon",
        "default": {
          "fontPath": "./resources/Monicons.woff",
          "fontCharacter": "\\F101"
        }
      }
    },
    "views": {
      "firebase-vscode": [
        {
          "id": "thingsTree",
          "name": "Things Tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "thingsTree",
        "when": "",
        "contents": "No user logged in.\n[LOG IN](command:firebase-vscode.login)"
      }
    ],
    "commands": [
      {
        "command": "firebase-vscode.helloWorld",
        "title": "ABCD"
      },
      {
        "command": "firebase-vscode.start",
        "title": "Start Firebase VSCode"
      },
      {
        "command": "firebase-vscode.login",
        "title": "Log in to Firebase"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "webpack": "webpack --config webpack.dev.js",
    "watch": "webpack --config webpack.dev.js --watch",
    "build": "webpack --config webpack.prod.js --devtool hidden-source-map",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "proxy-agent": "^5.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0"
  }
}
