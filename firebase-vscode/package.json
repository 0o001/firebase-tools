{
  "name": "firebase-vscode",
  "displayName": "firebase-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Firebase VS Code Extension",
      "properties": {
        "firebase-vscode-extension.firebaseRcFolder": {
          "type": "string",
          "default": "",
          "description": "Firebase RC folder"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "firebase",
          "title": "Firebase",
          "icon": "$(mono-firebase)"
        }
      ]
    },
    "icons": {
      "mono-firebase": {
        "description": "Firebase icon",
        "default": {
          "fontPath": "./resources/Monicons.woff",
          "fontCharacter": "\\F101"
        }
      }
    },
    "views": {
      "firebase": [
        {
          "type": "webview",
          "id": "firebase.sidebarView",
          "name": "Firebase"
        }
      ]
    },
    "commands": [
      {
        "command": "firebase-vscode.helloWorld",
        "title": "ABCD"
      },
      {
        "command": "firebase-vscode.start",
        "title": "Start Firebase VSCode"
      },
      {
        "command": "firebase-vscode.login",
        "title": "Log in to Firebase"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "webpack": "webpack --config webpack.dev.js",
    "watch": "webpack --config webpack.dev.js --watch",
    "build": "webpack --config webpack.prod.js --devtool hidden-source-map",
    "build:extension": "webpack --config webpack.dev.js --config-name extension",
    "build:sidebar": "webpack --config webpack.dev.js --config-name sidebar",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.1",
    "@zxing/text-encoding": "^0.9.0",
    "classnames": "^2.3.2",
    "cross-env": "^5.2.1",
    "proxy-agent": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/codicons": "0.0.30",
    "@vscode/test-electron": "^2.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.28.0",
    "eslint-plugin-react": "^7.32.2",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "glob": "^8.0.3",
    "mini-css-extract-plugin": "^2.6.0",
    "mocha": "^10.1.0",
    "postcss-loader": "^7.0.0",
    "sass": "^1.52.0",
    "sass-loader": "^13.0.0",
    "string-replace-loader": "^3.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0"
  }
}
